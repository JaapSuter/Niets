        <TextView android:text="@string/your_status" android:layout_alignParentLeft="true" style="@style/Text.Header" />
    </RelativeLayout>
    <View style="@style/HeaderDivider" />
    <View android:layout_width="wrap_content" android:layout_height="8.0dip" />
